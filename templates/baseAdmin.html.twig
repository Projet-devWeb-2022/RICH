        <div class="navbar-brand">
            <a class="navbar-item">
                <img src="{{ asset('../assets/img/logo_RICH.png') }}">
            </a>
        </div>
        <div class = "navbar-menu">
            <div class="navbar-end">
                <a href="{{ path('editAdminProfil') }}" class="navbar-item">
                   Admin
                </a>
            </div>
        </div>
    </nav>

    <nav style="background-color: #FDEE00; height: 0.8vh"></nav>
{% endblock %}

{% block navtwo %}
    <nav class="navbar is-info" role="navigation" aria-label="main navigation">
        <div class="navbar-start">
            <a class="navbar-item">
