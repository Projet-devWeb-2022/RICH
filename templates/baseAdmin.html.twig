                        <div class="dropdown-content">
                            <div class="dropdown-item">
                                <a href="{{ path('allVehicles') }}" class="navbar-item">
                                    Gestion des vehicules
                                </a>
                            </div>
                            <div class="dropdown-item">
                                <a href="{{ path('allRentalVehicles') }}" class="navbar-item">
