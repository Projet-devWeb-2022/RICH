            <div class="navbar-end">
                <a class="navbar-item">
                    Packs
                </a>

                <a class="navbar-item">
                    Activités
                </a>

                <div class="dropdown is-hoverable">
                    <div class="dropdown-trigger">
                        <a class="navbar-item" aria-haspopup="true" aria-controls="dropdown-menu4">
