{% extends 'baseForm.html.twig' %}
{% block content %}
    <title>Connexion</title>

    <div class="form">
        <h1>Rejoignez-nous !</h1>
        {{ form_start(form) }}
        <div class="email">
            <label>Adresse mail</label>
            {{ form_widget(form.email, {'attr': {'class': 'input'}}) }}
        </div>
        <div class="nom">
            <label>Nom</label>
            {{ form_widget(form.name, {'attr': {'class': 'input'}}) }}
        </div>
        <div class="prenom">
            <label>Pr√©nom</label>
            {{ form_widget(form.surname, {'attr': {'class': 'input'}}) }}
        </div>
        <div class="mdp">
            <label>Mot de passe</label>
            {{ form_widget(form.password, {'attr': {'class': 'input'}}) }}
        </div>
        <div class="confirm">
            <label>Confirmer le mot de passe</label>
            {{ form_widget(form.confirmPwd, {'attr': {'class': 'input'}}) }}
        </div>
        <div class="address">
            <label>Adresse</label>
            {{ form_widget(form.address, {'attr': {'class': 'input'}}) }}
        </div>

        <button class="button is-outlined" type="submit">Inscription</button>

    </div>


    {{ form_end(form) }}

    <a class="otherChoice" href="login">ou bien connectez-vous</a>

{% endblock %}
