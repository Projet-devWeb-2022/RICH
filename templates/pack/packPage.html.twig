{% extends './base.html.twig' %}

{% block title %}Rich - Pack{% endblock %}

{% block body %}
    {% block content %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <p class="title is-1" style="text-align: center"> Nos Packs </p>
        <br>
        <!-- Pour afficher l'ensemble des produits -->
        {% for pack in listePack %}

            <p class="title is-2"> Choissisez votre Pack : </p>

            <div class="block">
                <div class="container">
                    <div class="column">
                        <div class="card">
                            <div class="card-image">
                                <figure class="image">
                                    <img src="{{ asset('../assets/img/Pack n°1.png') }}" >
                                </figure>
                            </div>
                            <div class="card-content" style="background-color: #C7CFCF; text-align: center;">
                                <div class="media">
                                    <div class="media-content">
                                        <p class="title">{{ pack.name }}</p>
                                        <br>
                                        <p class="subtitle is-4">Votre destination pour ce pack est : {{ pack.destination.city }} </p>
                                        <p class="subtitle is-5"> Description : {{ pack.description }} </p>
                                    </div>
                                </div>

                                <div class="content" style="font-style: italic;">
                                    Ce pack peut convenir à {{ pack.nbPersonMax }} personnes maximum.
                                    <br>
                                    <br>
                                    Le prix est de {{ pack.price }}€ pour ce pack.
                                    <br>
                                    <a href="{{ path('cart_addPack', {'id':pack.id})}}">
                                        <button class="button is-light is-fullwidth" style="margin-top: 3vh;"> Ajouter au panier </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        {% endfor %}

        </section>
    </div>
    {% endblock %}
{% endblock %}
