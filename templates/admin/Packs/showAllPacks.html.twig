{% extends 'base.html.twig' %}
       {% block body %}
        {% block content %}
            <title>{% block title %} Tous les packs {% endblock %}</title>
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
            <br>

            <section class="section">
                <div class="box is-centered">
                    <div class="content">
                        <ion-icon name="add-outline"></ion-icon>
                        <a href="{{ path('newPack')}}" class="button is-info">Ajouter un pack</a>
                    </div>
                    <h3 class="title is-3">Tous les packs</h3> <br>
                    <div class="columns is-centered">


                        {% for pack in packs %}
                            <div class="column has-text-centered is-4-tablet is-3-desktop">
                                <div class="card">
                                    <div class="card-image has-text-centered is-size-4">
                                        <figure class="image is-2by1">
                                            <img src="https://bulma.io/images/placeholders/640x480.png" alt="Image">
                                        </figure>
                                        <div class="content">
                                            <p>
                                                <strong>{{ pack.name }}</strong>
                                                <br>

                                                <small>{{ pack.price}}</small>
                                                <small>{{ pack.nb_person_max}}</small>
                                                <br>
                                                <a href="{{ path('onePack', {id: pack.id} ) }}">En savoir plus...</a>
                                            </p>
                                        </div>
                                        <div class="card">
                                            <footer class="card-footer is-6">
                                                <a href="{{ path('editPack', {id: pack.id}) }}" class="card-footer-item">Modifier</a>
                                                <a href="{{ path('deletePack', {id: pack.id}) }}" class="card-footer-item">Supprimer</a>
                                                </footer>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                    <div class="navbar is-centered">
                        {{ knp_pagination_render(packs) }}
                    </div>
                </div>
            </section>
        {% endblock %}
       {% endblock %}