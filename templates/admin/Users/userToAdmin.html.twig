
{% extends 'admin/baseFormAdmin.html.twig' %}
 {% block body %}
     {% block title %}
         Changement de role
     {% endblock %}
     {% block content %}


         <div class="formulaire">

             <h1><strong>Changement de role</strong></h1>
             {{ form_start(form) }}
             <br>

             <div class="role">
                 <label class="lb">Role : </label>
                 {{ form_widget(form.roles , {'attr': {'class': 'in'}}) }}
             </div>

             <div class="btn">
                 {{ form_widget(form.valider ,{'attr': {'class': 'button'}}) }}
             </div>
             {{ form_end(form) }}
         </div>



     {% endblock %}
 {% endblock %}

