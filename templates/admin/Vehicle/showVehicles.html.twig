{% extends 'baseAdmin.html.twig' %}
        {% block content %}
            <title>{% block title %} Toutes les voitures {% endblock %}</title>
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
            <br>

            <section class="section">
                <div class="box is-centered">
                    <h3 class="title is-3">Tous les vehicules</h3> <br>
                    <div class="columns is-centered">
                        {% for vehicle in vehicles %}
                        <div class="column has-text-centered is-4-tablet is-3-desktop">
                            <div class="card">
                                <div class="card-image has-text-centered is-size-4">
                                    <figure class="image is-2by1">
                                        <img src="https://bulma.io/images/placeholders/640x480.png" alt="Image">
                                    </figure>
                                    <div class="content">
                                        <p>
                                            <strong>{{ vehicle.name }}</strong> <small>{{vehicle.type  }}</small>
                                            <br>
                                             {{ vehicle.PriceDay }}
                                            <a href="{{ path('oneVehicle', {id: vehicle.id})}}">En savoir plus...</a>
                                        </p>
                                    </div>
                                    <div class="card">
                                        <footer class="card-footer is-6">
                                            <a href="#" class="card-footer-item">Edit</a>
                                            <a href="{{ path('vehicle.delete', {id: vehicle.id}) }}" class="card-footer-item" data-id="{{ vehicle.id }}">Supprimer</a>
                                        </footer>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}

                    </div>
                    <div class="navbar is-centered">
                        {{ knp_pagination_render(vehicles) }}
                    </div>
                </div>
            </section>
        {% endblock %}
