
{% extends 'admin/baseFormAdmin.html.twig' %}
 {% block body %}
     {% block title %}
         Ajout d'un vehicule
     {% endblock %}
     {% block content %}


         <div class="formulaire">

             <h1><strong>Ajouter un vehicule</strong></h1>
             {{ form_start(form) }}
             <br>
             <div class="name">
                 <label class="lb">Nom : </label>
                 {{ form_widget(form.name , {'attr': {'class': 'in'}}) }}
             </div>

             <div class="price">
                 <label class="lb">Prix par jour: </label>
                 {{ form_widget(form.PriceDay , {'attr': {'class': 'in'}}) }}
             </div>

             <div class="type">
                 <label class="lb">Type : </label>
                 {{ form_widget(form.type , {'attr': {'class': 'in'}}) }}
             </div>

             <div class="btn">
                 {{ form_widget(form.valider ,{'attr': {'class': 'button'}}) }}
             </div>
             {{ form_end(form) }}
         </div>



     {% endblock %}
 {% endblock %}

