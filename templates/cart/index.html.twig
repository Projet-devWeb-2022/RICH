{% extends 'base.html.twig' %}

{% block title %} Panier | RICH  {% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Voici votre panier âœ…</h1>

    <ul>
        {% if items | length > 0 %}

            <table class="table is-fullwidth">
                <thead>
                    <tr>
                        <th> Pack </th>
                        <th> destination </th>
                        <th> description </th>
                        <th> Quantity </th>
                        <th> Prix </th>
                    </tr>
                </thead>
                <tbody>
                {% for item in items %}
                <tr>
                    <td> {{ item.product.name }}</td>
                    <td> {{ item.product.destination.city }}</td>
                    <td> {{ item.product.description}}</td>
                    <td> {{ item.quantity}}</td>
                    <td> {{ item.product.getPrice() * item.quantity}}</td>
                    <td>
                        <a href="{{ path('cart_remove', {'id':item.product.id})}}">
                            <button class="button is-danger is-small"> Supprimer </button>
                        </a>
                    </td>
                </tr>
                {% endfor %}

                <td> total : {{ total }} </td>
                </tbody>
            </table>

            <button class="button is-medium is-fullwidth is-success"> Paiement </button>
        {% else %}
            <p> Vous n'avez aucun pack. </p>
        {% endif %}
    </ul>
</div>
{% endblock %}
